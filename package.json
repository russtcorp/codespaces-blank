{
  "name": "diner-saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Cloudflare-native multi-tenant diner platform",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "db:local": "wrangler d1 execute diner-core --local --file=./packages/db/schema.sql",
    "db:migrate": "wrangler d1 execute diner-core --file=./packages/db/schema.sql",
    "db:studio": "drizzle-kit studio",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@turbo/gen": "^2.3.3",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3",
    "wrangler": "^3.90.0"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
