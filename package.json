{
  "name": "diner-saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Cloudflare-native multi-tenant diner platform",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "db:local": "mkdir -p .wrangler/state/v3/d1 && sqlite3 .wrangler/state/v3/d1/local-dev.db < ./packages/db/migrations/0001_init_schema.sql && echo '✅ Local D1 database initialized'",
    "db:seed": "node packages/db/scripts/seed.js && sqlite3 .wrangler/state/v3/d1/local-dev.db < ./packages/db/migrations/0002_seed_dev_data.sql && echo '✅ Seed data applied'",
    "db:migrate": "wrangler d1 execute diner-core --file=./packages/db/migrations/0001_init_schema.sql",
    "db:studio": "drizzle-kit studio",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@turbo/gen": "^2.3.3",
    "@types/qrcode": "^1.5.6",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3",
    "wrangler": "^3.90.0"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@react-pdf/renderer": "^4.3.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "qrcode": "^1.5.4",
    "recharts": "^3.6.0",
    "remix-auth": "^4.2.0",
    "remix-auth-form": "^3.0.0",
    "zod": "^4.3.5",
    "zod-form-data": "^3.0.1"
  }
}
